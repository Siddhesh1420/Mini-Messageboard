<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <style>
    body {
      background-color: #0e0e0e;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      color: #e0e0e0;
      margin: 0;
      padding: 2rem;
    }

    h1 {
      text-align: center;
      color: #66ccff;
      margin-bottom: 2rem;
    }

    .container {
      max-width: 900px;
      margin: 0 auto;
    }

    .new-message {
      display: block;
      width: fit-content;
      margin: 0 auto 2rem;
      padding: 0.7rem 1.5rem;
      background-color: #1e90ff;
      color: #fff;
      font-weight: bold;
      text-decoration: none;
      border-radius: 6px;
      transition: background 0.3s;
    }

    .new-message:hover {
      background-color: #0d70d0;
    }

    .message-list {
      display: flex;
      flex-direction: column;
      gap: 1.5rem;
    }

    .message-box {
      background-color: #1a1a1a;
      border: 1px solid #333;
      border-left: 5px solid #66ccff;
      border-radius: 10px;
      padding: 1.5rem;
      box-shadow: 0 4px 8px rgba(0,0,0,0.4);
      transition: transform 0.2s;
    }

    .message-box:hover {
      transform: translateY(-4px);
    }

    .message-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    .username {
      font-size: 1.2rem;
      font-weight: bold;
      color: #ffffff;
    }

    .timestamp {
      font-size: 0.9rem;
      color: #999;
    }

    .content {
      margin-top: 1rem;
      font-size: 1.05rem;
      color: #ccc;
      white-space: pre-wrap;
    }

    .details-link {
      display: inline-block;
      margin-top: 1rem;
      color: #66ccff;
      font-size: 0.95rem;
      text-decoration: none;
    }

    .details-link:hover {
      color: white;
      text-decoration: underline;
    }

  </style>
</head>
<body>
  <div class="container">
    <h1>ðŸ“¬ Mini Message Board</h1>
    <a class="new-message" href="/new">+ Submit New Message</a>

    <div class="message-list">
      <% messages.forEach(function(message, index) { %>
        <div class="message-box">
          <div class="message-header">
            <span class="username"><%= message.username %></span>
            <span class="timestamp"><%= message.added.toLocaleString() %></span>
          </div>
          <div class="content"><%= message.message %></div>
          <a class="details-link" href="/messages/<%= index %>">View Details â†’</a>
        </div>
      <% }); %>
    </div>
  </div>
</body>
</html>
